{
  "compilerOptions": {
    "outDir": "../../dist/apps/backend",
    "module": "commonjs",
    "types": ["node"],
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": "./",
    "esModuleInterop": false,
  },
  "exclude": ["node_modules", "dist"],
}
